<Window x:Class="InteractieveAnimatie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InteractieveAnimatie"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!-- Wire mouse events on the root Grid so the mouse controls the spotlight too -->
    <Grid x:Name="RootGrid"
          MouseMove="RootGrid_MouseMove"
          MouseLeave="RootGrid_MouseLeave"
          MouseEnter="RootGrid_MouseMove">
        <!-- Image -->
        <Image x:Name="MainImage" Stretch="UniformToFill" />

        <!-- Dark overlay whose OpacityMask will be a moving radial gradient -->
        <Rectangle x:Name="OverlayRect"
                   Fill="#CC000000"
                   IsHitTestVisible="False" />

        <!-- Debug text (top-left) so we can see incoming coords / status -->
        <TextBlock x:Name="DebugText"
                   Margin="8"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Background="#88000000"
                   Foreground="White"
                   Padding="6"
                   FontSize="12"
                   Text="Debug: starting..." />
    </Grid>
</Window>